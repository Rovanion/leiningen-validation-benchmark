(defproject lein-elasticsearch-local "0.2.0"
  :description "A Leiningen plugin for providing a local Elasticsearch instance"
  :url "http://github.com/mixradio/lein-elasticsearch-local"
  :license {:name "New BSD License"
            :url "https://github.com/mixradio/lein-elasticsearch-local/blob/master/LICENSE"}
  :dependencies [[environ "1.0.0"]
                 [net.lingala.zip4j/zip4j "1.3.2"]]
  :profiles {:dev {:dependencies [[midje "1.7.0"]]
                   :plugins [[lein-midje "3.1.3"]]}}
  :eval-in-leiningen true
  :deploy-repositories [["releases" {:url "https://clojars.org/repo"
                                     :creds :gpg}]])
