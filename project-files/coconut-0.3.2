(defproject coconut "0.3.2"
  :description "An asynchronous testing framework for Clojure and Clojurescript."
  :url "https://github.com/aaronlahey/coconut"
  :license {:name "Eclipse Public License"
            :url "http://www.eclipse.org/legal/epl-v10.html"}
  :java-source-paths ["test/coconut"]
  :dependencies [[org.clojure/clojure "1.8.0"]
                 [org.clojure/clojurescript "1.9.293"]
                 [org.clojure/core.async "0.2.395"]
                 [venantius/glow "0.1.4"]]
  :plugins [[lein-cljsbuild "1.1.3"]]
  :repl-options {:init-ns coconut.repl}
  :cljsbuild {:builds {:whitespace {:source-paths ["src" "test" "target/classes"]
                                    :notify-command ["karma" "start" "config/karma.whitespace.js"]
                                    :compiler {:output-to "target/coconut.whitespace.js"
                                               :optimizations :whitespace
                                               :source-map "target/coconut.whitespace.js.map"}}

                       :simple {:source-paths ["src" "test" "target/classes"]
                                :notify-command ["karma" "start" "config/karma.simple.js"]
                                :compiler {:output-to "target/coconut.simple.js"
                                           :optimizations :simple
                                           :source-map "target/coconut.simple.js.map"}}

                       :advanced {:source-paths ["src" "test" "target/classes"]
                                  :notify-command ["karma" "start" "config/karma.advanced.js"]
                                  :compiler {:output-to "target/coconut.advanced.js"
                                             :optimizations :advanced}}}}
  :profiles {:dev {:dependencies [[org.clojure/tools.namespace "0.2.11"]]}})
