(defproject net.apribase/kitashiro "0.3.5"
  :description "ClojureScript Utilities for apribase."
  :url "http://bitbucket.org/apribase/kitashiro"
  :license {:name "Eclipse Public License"
            :url  "http://www.eclipse.org/legal/epl-v10.html"}
  :scm {:name "git"
        :url  "https://github.com/apribase/kitashiro"}

  :dependencies [[org.clojure/clojure "1.6.0"]
                 [org.clojure/clojurescript "0.0-3196"]
                 [org.clojure/core.async "0.1.346.0-17112a-alpha"]
                 [cljs-ajax "0.3.11"]
                 [im.chit/purnam.core "0.5.2"]]

  :plugins [[lein-cljsbuild "1.0.5"]]

  :cljsbuild {:builds [{:source-paths ["src"]
                        :compiler {:output-to "dist/kitashiro.js"
                                   :optimizations :whitespace
                                   :pretty-print false}}]}

  :min-lein-version "2.0.0")
